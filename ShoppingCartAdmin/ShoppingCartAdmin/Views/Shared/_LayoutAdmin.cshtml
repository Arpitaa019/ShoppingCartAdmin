@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Flipkart Admin Dashboard</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body style="margin:0; font-family:Arial, sans-serif; background-color:#f4f6f9;">

    <!-- Top Navbar -->
    <div style="background-color:#2c3e50; color:white; padding:15px 30px; display:flex; justify-content:space-between; align-items:center;">
        <div style="font-size:20px;">Flipkart Admin Panel</div>
        <input type="text" id="globalSearch" placeholder="Search..." style="padding:5px 10px; border-radius:4px; border:none; width:200px;" />
    </div>

    <!-- Sidebar + Main -->
    <div style="display:flex;">
        <!-- Sidebar -->
        <div style="width:220px; background-color:#34495e; color:white; padding-top:20px;display:flex;flex-direction:column;">
            <div style="padding:30px 30px; border-bottom:1px solid #2c3e50; font-size:large;">Dashboard</div>
            <div style="padding:30px 30px; border-bottom:1px solid #2c3e50;">
                <a href="/Admin/AdminCustomerList" style="color:white; text-decoration:none; font-size:large;">Customers</a>
            </div>
            <div style="padding:30px 30px; border-bottom:1px solid #2c3e50;">
                <a href="/Seller/Index" style="color:white; text-decoration:none; font-size:large;">Sellers</a>
            </div>
            <div style=" padding:30px 30px; border-bottom:1px solid #2c3e50; font-size:large;">Orders</div>
            <div style="padding:30px 30px; border-bottom:1px solid #2c3e50; font-size:large;">Reports</div>
        </div>
        <!-- Main Content -->
        <div style="flex:1; padding:30px; overflow-y:auto;">
            @RenderBody()
        </div>
    </div>

    <script>
        $("#globalSearch").on("input", function () {
            const query = $(this).val().toLowerCase();
            $("#customerTable tr, #sellerTable tr").each(function () {
                const rowText = $(this).text().toLowerCase();
                $(this).toggle(rowText.includes(query));
            });
        });
    </script>
</body>
</html>
